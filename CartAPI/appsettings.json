{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ServiceName": "cart-api",
  "UseTracingExporter": "otlp",
  "UseMetricsExporter": "console",
  "UseLogExporter": "console",
  "HistogramAggregation": "explicit",
  "Zipkin": {
    "Endpoint": "http://localhost:9411/api/v2/spans"
  },
  "Otlp": {
    "Endpoint": "http://localhost:4317/api/traces"
  },
  "AspNetCoreInstrumentation": {
    "RecordException": "true"
  },
  "AkkaClusterConfig": {
    "ActorSystemName": "ClusterSys",
    "Hostname": "localhost",
    "Port": 9221,
    "Roles": [ "cart-events", "cart-creator" ],
    "SeedNodes": [ "akka.tcp://ClusterSys@localhost:9221" ]
  },
  "JwtBearerOptions": {
    "Authority": "https://login-rlsperf.congacloud.io/api/v1/auth",
    "MetadataAddress": "https://login-rlsperf.congacloud.io/api/v1/auth/.well-known/openid-configuration",
    "TokenValidationParameters": {
      "ValidateAudience": false,
      "ValidateIssuer": true
    }
  },
  "Authentication": {
    "TokenUrl": "https://login-rlsperf.congacloud.io/api/v1/auth/connect/token",
    "ClientId": "xxx",//Add client ID
    "ClientSecret": "xxxx"//Add client secret
  },
  "PlatformEndpoints": {
    "DocumentApiEndPoint": "https://rls-perf.congacloud.io"
  },
  "OTEL_AGENT_HOST": "localhost"
}
